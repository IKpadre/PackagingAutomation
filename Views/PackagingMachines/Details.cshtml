@model PackagingAutomation.Models.Entities.PackagingMachine

@{
    ViewData["Title"] = "Details";
}

<h1>Описание</h1>

<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionLine.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GetStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Weight.Performance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Weight.Performance)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
<br />
<div>
    <h5>@Html.DisplayNameFor(model => model.Schedules)</h5>
    @if (Model.Schedules.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().Order.Distributor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().Order.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().Order.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedules.First().EndTime)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model.Schedules)
                {
                    <tr>
                        <td>
                            @schedule.Order.Distributor
                        </td>
                        <td>
                            @schedule.Order.Product.Name
                        </td>
                        <td>
                            @schedule.Order.Quantity
                        </td>
                        <td>
                            @schedule.StartTime
                        </td>
                        <td>
                            @schedule.EndTime
                        </td>
                        <td>
                            <a asp-controller="Schedules" asp-action="Details" asp-route-id="@schedule.Id">Подробнее</a> |
                            <a asp-controller="Schedules" asp-action="Edit" asp-route-id="@schedule.Id">Изменить</a> |
                            <a asp-controller="Schedules" asp-action="Delete" asp-route-id="@schedule.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
