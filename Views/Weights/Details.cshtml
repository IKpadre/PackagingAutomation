@model PackagingAutomation.Models.Entities.Weight

@{
    ViewData["Title"] = "Details";
}

<h1>Описание</h1>

<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grams)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grams)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Performance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Performance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormatTube)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormatTube.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
<br />
<div>
    <h5>@Html.DisplayNameFor(model => model.Products)</h5>
    @if (Model.Products.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().Trademark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().ProductType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().Flavor)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            @product.Trademark.Name
                        </td>
                        <td>
                            @product.ProductType.Name
                        </td>
                        <td>
                            @product.Flavor.Name
                        </td>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Подробнее</a> |
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Изменить</a> |
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>