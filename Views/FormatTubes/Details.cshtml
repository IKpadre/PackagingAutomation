@model PackagingAutomation.Models.Entities.FormatTube

@{
    ViewData["Title"] = "Details";
}

<h1>Описание</h1>

<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
<br />
<div>
    <h5>@Html.DisplayNameFor(model => model.Weights)</h5>
    @if (Model.Weights.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Weights.First().Grams)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Weights.First().Performance)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var weight in Model.Weights)
                {
                    <tr>
                        <td>
                            @weight.Grams
                        </td>
                        <td>
                            @weight.Performance
                        </td>
                        <td>
                            <a asp-controller="Weights" asp-action="Details" asp-route-id="@weight.Id">Подробнее</a> |
                            <a asp-controller="Weights" asp-action="Edit" asp-route-id="@weight.Id">Изменить</a> |
                            <a asp-controller="Weights" asp-action="Delete" asp-route-id="@weight.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
