@model PackagingAutomation.Models.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Описание</h1>

<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trademark)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trademark.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flavor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flavor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight.Grams)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
