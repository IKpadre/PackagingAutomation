@model PackagingAutomation.Models.Entities.Trademark

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить запись?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
<br />
<div>
    <h5>@Html.DisplayNameFor(model => model.Products)</h5>
    @if (Model.Products.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().ProductType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().Flavor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Products.First().Weight)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            @product.ProductType.Name
                        </td>
                        <td>
                            @product.Flavor.Name
                        </td>
                        <td>
                            @product.Weight.Grams
                        </td>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Подробнее</a> |
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Изменить</a> |
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>