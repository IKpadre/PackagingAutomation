@model PackagingAutomation.Models.Entities.Weight

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>@Html.DisplayNameFor(model => model)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Grams" class="control-label"></label>
                <input asp-for="Grams" class="form-control" />
                <span asp-validation-for="Grams" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Performance" class="control-label"></label>
                <input asp-for="Performance" class="form-control" />
                <span asp-validation-for="Performance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormatTubeId" class="control-label"></label>
                <select asp-for="FormatTubeId" class="form-control" asp-items="ViewBag.FormatTubeId"></select>
                <span asp-validation-for="FormatTubeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
